+         target != TARGETING::targetService().end();
+         ++target)
+    {
+        if ((target->getAttr<TARGETING::ATTR_HWAS_STATE>().present))
+        {
+            TARGETING::TYPE l_type = target->getAttr<TARGETING::ATTR_TYPE>();
